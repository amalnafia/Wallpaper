<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.wallpaper.Utils.SquareImage
        android:id="@+id/item_collection_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#B3000000"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/item_collection_title"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Beautifully Mountain"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_collection_total_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="12 photos"
            android:textColor="@color/white" />
    </RelativeLayout>
</FrameLayout>